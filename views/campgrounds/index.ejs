<%- include ('../partials/header'); -%>

<h4><%= currentUser %></h4>

    <div class="container" style="margin-top:8px;margin-bottom: 8px; align-self: center;">
        <header class="jumbotron">
            <div class="container-fluid">
                <h1>Welcome to YelpCamp!!</h1>
                <p>view our handpicked camps!!</p>
                <p>
                    <a type ="button" class="btn btn-warning btn-large" href="/campgrounds/new">Add New Camps!!</a>
                </p>
            </div>
        </header>
    
        
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="card" style="margin:20px;padding:7px">
                        <img class="card-img-top" src="<%= campground.image %>" alt="">
                        <div class="card-block">
                            <h4 class="card-title" style="margin:7px"><%= campground.name %></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %> " class="btn btn-danger">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>    
        </div>
        
    </div>
    
<%- include ('../partials/footer'); -%>